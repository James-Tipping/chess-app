{
  "name": "minimax-chess-component",
  "description": "A web component using a minimax algorithm, Lit, and chess.js to provide an AI powered chess game",
  "license": "GPL-3.0",
  "author": "James Tipping",
  "version": "0.2.1",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./chess-app.js": {
      "import": "./dist/src/ChessApp.js",
      "types": "./dist/src/ChessApp.d.ts"
    },
    "./chess-board.js": {
      "import": "./dist/src/components/ChessBoard.js",
      "types": "./dist/src/components/ChessBoard.d.ts"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "LICENSE.thirdparty",
    "custom-elements.json"
  ],
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "chess.js": "^1.1.0",
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/eslint-config": "^12.0.3",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@web/dev-server": "^0.4.6",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "no-undef": "off",
      "no-unused-vars": "off",
      "max-classes-per-file": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-plusplus": "off",
      "no-shadow": "off",
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        {
          "ts": "never",
          "js": "always"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
